<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="LightBlue">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Padding="20" 
               Text="Sobre o Projeto Hotel App"
               FontFamily="Caveat"
               FontSize="50"
               TextColor="Green"
               HorizontalOptions="Center" />

        <Frame Padding="20" 
               CornerRadius="10" 
               HasShadow="True"
               BackgroundColor="White">

            <VerticalStackLayout Spacing="10">

                <Label Text="Desenvolvedora:" 
                       FontAttributes="Bold" 
                       FontSize="Medium" />

                <Label Text="Veronica Yukie Tengan Pires" 
                       FontSize="Medium"
                       TextColor="{StaticResource Gray900}" />

                <Label Text="Ano de Desenvolvimento:" 
                       FontAttributes="Bold" 
                       FontSize="Medium" />

                <Label Text="2025" 
                       FontSize="Medium"
                       TextColor="{StaticResource Gray900}" />

                <Label Text="Tecnologia Utilizada:" 
                       FontAttributes="Bold"
                       FontSize="Medium"
                       Margin="0, 10, 0, 0" />

                <Label Text=".NET MAUI com C#" 
                       FontSize="Medium"
                       TextColor="{StaticResource Primary}" />

            </VerticalStackLayout>

        </Frame>

        <Button Text="Voltar" 
                BackgroundColor="Green"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>



